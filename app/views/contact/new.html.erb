<h2>Contact Us</h2></br>

<%= form_for @message, :url => contact_path do |form| %>

  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <p> Please enter your details in the form below to to place an enquiry and one of our representative will
  	contact you as soon as possbile. </p>
  
  <fieldset class="fields">
    <div class="field">
      <p><%= form.label :name%></br>
      <%= form.text_field :name , :placeholder => "Your name" %></p>
    </div>
    
    <div class="field">
      <p><%= form.label :email %></br>
      <%= form.text_field :email  , :placeholder => "Your email"%></p>
    </div>
    <div class="field">
      <p><%= form.label :subject %></br>
      <%= form.text_field :subject , :placeholder => "Message subject"%></p>
    </div>
    
    <div class="field">
     <p> <%= form.label "message" %></br>
      <%= form.text_area :body , :placeholder => "Your message here............"%></p>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Send" , :class => 'button medium radius success nice'%>
  </fieldset>
<% end %>
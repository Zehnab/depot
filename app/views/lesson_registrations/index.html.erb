<% @lesson_registrations.each do |lesson_registration| %>
  <tr>

 	<td><%= lesson_registration.id %></td>
    <td><%= lesson_registration.lesson.title %></td>
    <td><%= lesson_registration.first_name %></td>
    <td><%= lesson_registration.child_name %></td>
    <td><%= lesson_registration.child_age %></td>
    <td><%= lesson_registration.photo_consent %></td>
    <td><%= lesson_registration.medical_info %></td>
    <td><%= lesson_registration.payment_method %></td>
    <td><%= lesson_registration.other_details %></td>
    <td><%= lesson_registration.user_id %></td>
    
    
      <% if can? :update, @lesson_registrations%>
    <td><%= link_to 'Show', lesson_registration %></td>
    <td><%= link_to 'Edit', edit_lesson_registration_path(lesson_registration) %></td>
    <td><%= link_to 'Destroy', lesson_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  		<%end%>
  </tr>
<% end %>
</table>


